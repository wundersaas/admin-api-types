{
  "compilerOptions": {
    "target": "ESNext",
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "declaration": true,
    "typeRoots": ["./environment.d.ts"]
  },
  "include": ["/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
